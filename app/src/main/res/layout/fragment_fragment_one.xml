<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_red_light"
    tools:context="layout.FragmentOne"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="354dp"
            android:layout_height="wrap_content"
            android:text="@string/question1"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/q1text"
            android:textColor="@color/white"
            />

        <RadioGroup
            android:id="@+id/q1_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:text="@string/true_frag1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/trueButton1"
                android:clickable="true"
                android:buttonTint="@color/white"
                android:textColor="@color/white"
                />

            <RadioButton
                android:text="@string/false_frag1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/falseButton1"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                android:buttonTint="@color/white"
                android:textColor="@color/white"
                />

        </RadioGroup>

        <Button
            android:id="@+id/submitButton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save_frag1"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:onClick="submit"
            />

        <Button
            android:id="@+id/cheatButton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cheat_frag1"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:onClick="cheat"
            />

        <Button
            android:id="@+id/skipButton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/skip_frag1"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:onClick="skip"
            />



    </LinearLayout>

</FrameLayout>
