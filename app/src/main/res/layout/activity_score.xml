        <Button
            android:text="@string/q8Ebutton"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/q8explainbtn"
            android:onClick="ChangeFragment"
            android:layout_weight="0.30" />

    </LinearLayout>

    <fragment
        android:name="layout.FragmentOneExplanation"
        android:id="@+id/fragment_place"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        ></fragment>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seeScoresButton"
            android:text="@string/see_scores"
            android:onClick="seeScores"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/endQuizButton"
            android:text="@string/end_quiz"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:onClick="endQuiz" />

    </LinearLayout>

</LinearLayout>