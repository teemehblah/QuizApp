            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/score_words"
            android:paddingBottom="10dip"
            android:gravity="center"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/final_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/score_number_field"
            android:gravity="center"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_marginTop="10dp">

        <Button
            android:text="@string/q1Ebutton"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/q1explainbtn"
            android:onClick="ChangeFragment"
            android:layout_weight="0.30" />

        <Button
            android:text="@string/q2Ebutton"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/q2explainbtn"
            android:onClick="ChangeFragment"
            android:layout_weight="0.30" />

        <Button
            android:text="@string/q3Ebutton"
